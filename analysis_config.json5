{
  /* List of files that are forbidden in the git repository. GitHub flavored wildcards are possible here. */
  "forbidden_files": [
    "*.doc",
    "*.dot",
    "*.wbk",
    "*.docm",
    "*.dotx",
    "*.dotm",
    "*.wll",
    "*.wwl",
    "*.docx",
    "*.ppt",
    "*.pot",
    "*.pps",
    "*.ppa",
    "*.pptx",
    "*.pptm",
    "*.ppam",
    "*.ppsx",
    "*.ppsm",
    "*.sldx",
    "*.sldm",
    "*.ppam",
    "*.dll",
    "*.odt",
    "*.one",
    "*.msi",
    "*.mp4",
    "*.mkv",
    "*.avi",
    "*.zip",
    "*.tar",
    "*.7z"
  ],
  /* List of files that are going to be ignored by the static code analysis. GitHub flavored wildcards are possible 
  here. */
  "ignored_files": [
    "*.md",
    "**/*.gitignore",
    "++/*.editorconfig",
    "*.exe",
    "*.mp3",
    "*.wav",
    "*.gif",
    "*.ttf",
    "*.png",
    "*.jpg",
    "*.ico",
    "*.svg",
    "*.gif",
    "*.jar",
    "*.sln"
  ],
  /* Explicitly define the file encoding for specific files or file types. GitHub flavored wildcards are possible here.
  (UTF-8 is chosen as a default encoding for every file) */
  "file_encodings": {
    "*.sql": "utf-16le",
    "*.tsq": "utf-16le",
    "*.cs": "utf-16le",
    "*.java": "utf-8",
    "*.txt": "utf-8",
    "*.py": "utf-8",
    "*.js": "utf-8",
    "*.ts": "utf-8",
    "*.html": "utf-8",
    "*.css": "utf-8",
    "*.psm1": "utf-16le",
    "*.ps1": "utf-16le",
    "*.lnx": "utf-16le"
  },
  /* The standard checks to be performed for every file in the diff. */
  "standard_checks": {
    "tabs": null,
    "todo": null,
    "replacement_characters": null
  },
  /* The checks to be performed for explicit files. GitHub flavored wildcards are possible here. */
  "specific_checks": {
    "*.sql": {
      "line_length":  {max_line_length: 120},
      "trailing_whitespace": {max_trailing_whitespaces: 20},
    },
    "*.cs": {
      "line_length": {max_line_length: 120},
      "trailing_whitespace": {max_trailing_whitespaces: 20},
      "csharp_method_length": {"max_lines": 20}
    },
    "*.java": {
      "line_length": {max_line_length: 120},
      "trailing_whitespace": {max_trailing_whitespaces: 20}
    }
  }
}